<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
  <%= best_in_place @post, :title, :as => :input %>
</p>

<p>
  <b>Published at:</b>
  <%= @post.published_at %>
  <%= best_in_place @post, :published_at, :as => :date %>
</p>

<p>
  <b>Content:</b>
  <%= @post.body %>
  <%= best_in_place @post, :body, type: :cktext_area, :as => :cktext_area, :ok_button => 'Save', :cancel_button => 'Cancel'%>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path, class: "btn btn-primary btn-sm"  %>

  <%= render 'images/images' %>
  <%= render 'images/form' %>
