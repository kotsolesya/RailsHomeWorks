<% provide(:title, "Edit user") %>
<div class="container">
    <h1 class="text-center login-title">Update your profile</h1>
    <div class="row">

        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <%= form_for @user do |f| %>
                <%= render 'error_messages' %>
                <div class="input-group">
                    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
                    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
                    <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
                    <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
                    <%= f.text_field :birthday, :class => 'datepicker' %>
                    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                    <!-- <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %> -->
                </div>
                <br>
                <%= f.submit 'Save changes' , class: 'btn btn-lg btn-primary btn-block' %>
                <% end %>
            </div>
        </div>
    </div>
</div>
