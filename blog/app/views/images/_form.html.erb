<%= form_for [@imageable, @image], :html => { :multipart => true }  do |f| %>
  <% if @image.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :url, rows: 8 %>
  </div>
  <div class="formList">
        <%= f.label :photo, "Photo" %>
        <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
